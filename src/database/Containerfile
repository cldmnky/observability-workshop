FROM golang:1.25 AS builder
WORKDIR /workspace
COPY go.mod go.mod
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/database ./database

FROM registry.access.redhat.com/ubi9/ubi-minimal:latest
USER 0
RUN microdnf install -y ca-certificates && microdnf clean all
RUN mkdir -p /var/lib/chai && chown -R 1001:0 /var/lib/chai
COPY --from=builder /out/database /usr/local/bin/database
USER 1001
EXPOSE 8082
ENTRYPOINT ["/usr/local/bin/database"]
